
<div style="width: 300px; text-align: center; margin: auto">
  <%= form_with(model: product, local: true) do |form| %>
    <!-- это у нас сообщение об ошибках -->
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :title, class: "label"  %> <br>
      <%= form.text_field :title, class: "form-control", id: "exampleInputEmail1" %> <br>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "label" %> <br>
      <%= form.text_area :description, class: "form-control", id: "exampleFormControlTextarea1", rows: 6 %> <br>
    </div>
    <div class="form-group">
      <%= form.label :price, class: "label" %>
      <%= form.text_field :price, class: "form-control", id: "exampleInputEmail1" %>
    </div>
    <div class="form-group">
      <%= form.label :image_url, class: "label" %>
      <%= form.text_field :image_url, class: "form-control", id: "exampleInputEmail1" %>
    </div>
    <div>
      <%= form.submit 'type submit', class: "btn btn-success" %>
    </div>
  <% end %>
</div>
