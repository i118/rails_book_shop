
<section class="jumbotron text-center">
  <div class="container">
    <h1>Album example</h1>
    <h4>Something short and leading about the collection below—its contents, the creator, etc.
      Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</h4>
    <p>
      <%= link_to 'New Product', new_product_path, class: "btn btn-primary my-2" %>
      <a href="#" class="btn btn-secondary my-2">Secondary action</a>
    </p>
  </div>
</section>

<main role="main">
  <div class="container">

    <div class="row">
      <% @products.each do |product| %>
      <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <%= image_tag product.image_url %>
            <div class="card-body">
              <h5 class="cart-title"><%= product.title %></h5>
              <p class="card-text"><%= truncate strip_tags(product.description), length: 80 %></p> <!-- truncate strip_tags(product.description), length: 80 этот метод  будет показывать только первые 80 символов -->
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to 'Show', product, class: "btn btn-sm btn-primary eeee" %>
                  <%= link_to 'Edit', edit_product_path(product), class: "btn btn-sm btn-success" %>
                  <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
                </div>
                <small class="text-muted"><%= product.price %> $</small>
              </div>
            </div>
          </div>
      </div>
      <% end %>
    </div>

  </div>
</main>
